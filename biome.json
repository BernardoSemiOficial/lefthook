{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"files": {
		"include": [
			"./src/**/*.ts",
			"./src/**/*.html",
			"./src/**/*.scss",
			"./src/**/*.css"
		],
		"ignore": []
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": { "formatter": { "quoteStyle": "double" } }
}
